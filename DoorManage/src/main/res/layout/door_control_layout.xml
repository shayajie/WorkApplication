<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        layout="@layout/title_layout" />

<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="vertical"
        android:padding="3dp" >
		
        <LinearLayout 
            android:layout_width="match_parent"
           	android:layout_height="wrap_content"
            >
            <RelativeLayout 
                android:id="@+id/open_door_relayout"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/door_control_height"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="2dp"
                android:clickable="true"
                android:background="@drawable/gridview_item_layout_bg"
                >
                <LinearLayout 
                    android:id="@+id/door_control_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    >
                    <RelativeLayout 
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        >
                        <ImageView 
                            android:id="@+id/open_door_indicator_lamp_imageview"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/white_first_text_color"
                            />
                    </RelativeLayout>
                    <RelativeLayout 
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        >
                        <TextView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开   门"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white_first_text_color"
                            android:textSize="@dimen/first_text_size"
                            />
                    </RelativeLayout>
                </LinearLayout>
                 <RelativeLayout 
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="4dp"
                     android:layout_below="@id/door_control_linearlayout"
                     >
                     <TextView 
                         android:id="@+id/open_door_prompt_message"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerInParent="true"
                         android:text="正在发送指令"
                         android:textSize="@dimen/second_text_size"
                         android:textColor="@color/white_second_text_color"
                         />
                 </RelativeLayout>   
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/close_door_relayout"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/door_control_height"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:clickable="true"
                android:background="@drawable/gridview_item_layout_bg"
                >
                <LinearLayout 
                    android:id="@+id/door_control_linearlayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    >
                    <RelativeLayout 
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        >
                        <ImageView 
                            android:id="@+id/close_door_indicator_lamp_imageview"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/white_first_text_color"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout 
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        >
                        <TextView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关   门"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white_first_text_color"
                            android:textSize="@dimen/first_text_size"
                            />
                    </RelativeLayout>
                </LinearLayout>
                 <RelativeLayout 
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="4dp"
                     android:layout_below="@id/door_control_linearlayout2"
                     >
                     <TextView 
                         android:id="@+id/close_door_prompt_message"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="正在发送指令"
                         android:layout_centerInParent="true"
                         android:textSize="@dimen/second_text_size"
                         android:textColor="@color/white_second_text_color"
                         />
                 </RelativeLayout>   
            </RelativeLayout>
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/stop_relayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/door_control_height"
            android:layout_marginTop="5dp"
            android:background="@drawable/gridview_item_layout_bg"
            android:clickable="true"
            android:padding="5dp" >

            <TextView
                android:id="@+id/stop_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="停止"
                android:textColor="@color/white_first_text_color"
                android:textSize="@dimen/first_text_size" />
			<TextView 
			    android:id="@+id/stop_prompt_message"
			    android:layout_marginTop="5dp"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/stop_textview"
			    android:text="正在发送指令"
			    android:gravity="center"
			    android:textColor="@color/white_second_text_color"
			    android:textSize="@dimen/second_text_size"
			    />
        </RelativeLayout>
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/door_control_height"
            android:layout_marginTop="5dp"
            android:background="@drawable/gridview_item_shape_true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/door_encoder_pulses"
                android:textColor="@color/white_first_text_color"
                android:textSize="@dimen/second_text_size" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7" >

                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="44531231"
                    android:textColor="@color/white_first_text_color"
                    android:textSize="@dimen/first_text_size"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/door_control_height"
            android:layout_marginTop="5dp"
            android:background="@drawable/gridview_item_shape_true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/door_pulse_upper_limit"
                android:textColor="@color/white_first_text_color"
                android:textSize="@dimen/second_text_size" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7" >

                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="44531231"
                    android:textColor="@color/white_first_text_color"
                    android:textSize="@dimen/first_text_size"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/door_control_height"
            android:layout_marginTop="5dp"
            android:background="@drawable/gridview_item_shape_true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/door_pulse_lower_limit"
                android:textColor="@color/white_first_text_color"
                android:textSize="@dimen/second_text_size" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7" >

                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="44531231"
                    android:textColor="@color/white_first_text_color"
                    android:textSize="@dimen/first_text_size"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
    

</LinearLayout>