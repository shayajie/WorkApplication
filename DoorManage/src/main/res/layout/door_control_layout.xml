        android:padding="3dp" >

        <RelativeLayout
            android:id="@+id/stop_relayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/gridview_item_shape_true"
            android:clickable="true"
            android:padding="5dp" >
            <TextView
                android:id="@+id/prompt_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white_first_text_color"
                android:textSize="@dimen/first_text_size"
                android:gravity="center"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>


