                            android:layout_height="wrap_content"
                            android:text="@string/control_close_door"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white_first_text_color"
                            android:textSize="@dimen/first_text_size"
                            />
                    </RelativeLayout>
                </LinearLayout>
